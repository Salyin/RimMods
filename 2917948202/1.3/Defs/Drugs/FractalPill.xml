					<li>
						<capacity>Consciousness</capacity>
						<offset>8</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>10</offset>
					</li>
				</capMods>
				<statOffsets>
					<GlobalLearningFactor>12</GlobalLearningFactor>
