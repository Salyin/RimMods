                                        <li>UpperHead</li>
                                        <li>FullHead</li>
                                    </groups>
                                </li>
                                <li>
                                    <def>ATR_MechanicalVisualSensor</def>
                                    <customLabel>left visual sensor</customLabel>
                                    <coverage>0.13</coverage>
